<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 	
	"-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kosaShoppingMall.mapper.GoodsMapper">

<insert id="goodsInsert" parameterType="goodsDTO">
	insert into member(goods_num, goods_name, goods_price, goods_content, delivery_cost)
	values(#{goodsNum}, #{goodsName}, #{goodsPrice}, #{goodsContent}, #{delivery_cost})
</insert>

<select id="numberGenerate" resultType="string">
	select concat('kosa',nvl(max(substr(goods_num,5)),100000) + 1) from goods
</select>

<select id="selectAll" resultType="goodsDTO">
	select goods_num goodsNum, goods_name goodsName, goods_price goodsPrice, goods_content goodsContent, goods_images goodsImages, goods_main goodsMain, delivery_cost deliveryCost, visit_count visitCount
	from goods
</select>
</mapper>