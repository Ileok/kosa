<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%
	Integer count = (Integer)application.getAttribute("count");
Integer newCount = 0;
	if (count == null) {
		count = 1;
		application.setAttribute("count", 1);
	} else {
		newCount = count;
		if(session.isNew()){
			newCount += 1;
			application.setAttribute("count", count+1);
		}
	}
%>
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>counter.jsp</title>
</head>
<body>
현재 접속자 수 : <%= newCount %>
</body>
</html>