<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 	
	"-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kosaShoppingMall.mapper.EmployeeMapper">
<insert id = "empInsert" parameterType="empDTO">
	insert into employees(emp_id, emp_pw, emp_name, emp_addr, emp_phone, emp_email)
	values(#{empId}, #{empPw}, #{empName}, #{empAddr}, #{empPhone}, #{empEmail})		
</insert>

<select id="selectAll" resultType="empDTO">
select emp_name empName, emp_id empId, emp_addr empAddr, emp_phone empPhone, emp_email empEmail
from employees
</select>

<select id="selectOne" parameterType="string" resultType="empDTO">
	select emp_id empId, emp_name empName, emp_addr empAddr, emp_phone empPhone, emp_pw empPw
	from employees
	where emp_id = #{empId}
</select>

<update id="empUpdate" parameterType="empDTO">
	update employees
	set emp_name = #{empName}, emp_addr = #{empAddr},
	emp_phone = #{empPhone}, emp_Pw = #{empPw}
	where emp_id = #{empId}
</update>

<delete id="empDelete" parameterType="empDTO">
	delete from employees
	where emp_id = #{empId}
</delete>
</mapper>