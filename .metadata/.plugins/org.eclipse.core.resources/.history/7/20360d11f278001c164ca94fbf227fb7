<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC 	
	"-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="springBootTest2.mapper.LibraryMapper">


<insert id="libInsert" parameterType="libdto">
insert into library(lib_num, lib_writer, lib_subject,lib_content,mem_id,ip_addr, lib_pw)
values(seq_num1.nextval, #{libWriter}, #{libSubject}, #{libContent}, #{memId}, 
		#{ipAddr}, #{libPw})
</insert>
<sql id="baseColumns">
lib_num libNum, lib_writer libWriter, lib_subject libSubject,
lib_content libContent,mem_id memId,ip_addr ipAddr, lib_pw libPw
</sql>
<select id="selectAll" resultType="libdto">
	select <include refid="baseColumns" />
	from library
</select>
<select id="selectOne" resultType="libdto">
    select <include refid="baseColumns" />
	from library
	where lib_num = #{libNum}
</select>

<update id="libraryUpdate" parameterType="springBootTest2.domain.LibraryDTO">
	update library
	set lib_writer = #{libWriter}, lib_subject = #{libSubject}, lib_Content = #{libContent}
	where lib_num = #{libNum}
</update>

<delete id="libDelete" parameterType="springBootTest2.domain.LibraryDTO">
	delete from library
	where lib_num = #{libNum}
</delete>
</mapper>